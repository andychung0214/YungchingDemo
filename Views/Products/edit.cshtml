@model YungchingDemo.Models.ViewModel.ProductModel;

@{
    ViewData["Title"] = "編輯產品";
}
<form>
    @if (Model.ProductId != 0)
    {
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">產品ID</label>
            <input type="text" class="form-control" aria-describedby="emailHelp" value="@Model.ProductId">
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ProductName))
    {
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">產品名稱</label>
            <input type="text" class="form-control" aria-describedby="emailHelp" value="@Model.ProductName">
        </div>
    }

    @if (Model.SupplierId != null)
    {
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">供應商ID</label>
            <input type="text" class="form-control" aria-describedby="emailHelp" value="@Model.SupplierId">
        </div>
    }

    @if (Model.CategoryId != null)
    {
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">型別ID</label>
            <input type="text" class="form-control" aria-describedby="emailHelp" value="@Model.CategoryId">
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.QuantityPerUnit))
    {
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">數量</label>
            <input type="text" class="form-control" aria-describedby="emailHelp" value="@Model.QuantityPerUnit">
        </div>
    }

    @if (Model.UnitPrice != null)
    {
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">單價</label>
            <input type="text" class="form-control" aria-describedby="emailHelp" value="@Model.UnitPrice">
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ProductName))
    {
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">庫存數量</label>
            <input type="text" class="form-control" aria-describedby="emailHelp" value="@Model.ProductName">
        </div>
    }

    @if (Model.UnitsInStock != null)
    {
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">訂購量</label>
            <input type="text" class="form-control" aria-describedby="emailHelp" value="@Model.UnitsInStock">
        </div>
    }

    @if (Model.UnitsOnOrder != null)
    {
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">再次訂購量</label>
            <input type="text" class="form-control" aria-describedby="emailHelp" value="@Model.UnitsOnOrder">
        </div>
    }


    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">中止</label>
        <input type="text" class="form-control" aria-describedby="emailHelp" value="@Model.Discontinued">
    </div>

    <a class="nav-link text-dark" href="/Products">
        <input type="button" class="btn btn-primary" value="Back List">
    </a>
</form>